package week04

class Nat {
  abstract class Nat {
    def isZero: Boolean
    def predecessor: Nat
    def sucessor: Nat
    def +(that:Nat):Nat
    def -(that:Nat):Nat
  }
  
  object zero extends Nat{
    def isZero = true
    def predecessor = throw new Error("0.predecessor")
    def successor = new Succ(this)
    def +(that: Nat)
    def -(that: Nat)
  }
  
 class Succ(n:Nat) extends Nat{
   def isZero = false
   def predecessor = n
   def successor = new Succ(this)
 }
  
  
  
}